<?xml version="1.0" encoding="UTF-8"?>
<Configuration status="info">
    <Appenders>				
        <!-- LOG -->
        <RollingFile name="LogFile" fileName="/opt/tomcat/webapps/RegistroJornada/log.log"
                             filePattern="/opt/tomcat/webapps/RegistroJornada/logs/RegistroJornada-%d{yyyy}-%i.log.gz">
            <PatternLayout
                pattern="%n%d{yyyy-MM-dd HH:mm:ss.SSS} %-5level %-30l %logger{36} ### %msg"
                header="-- REGISTRO JORNADA LOG --" />
            <Policies>
                <TimeBasedTriggeringPolicy />
                <SizeBasedTriggeringPolicy size="10 MB" />
            </Policies>
            <DefaultRolloverStrategy max="20"/>
        </RollingFile>			
        		
        <!-- LOGDB -->
        <RollingFile name="LogFileDB" fileName="/opt/tomcat/webapps/RegistroJornada/logdb.log"
                             filePattern="/opt/tomcat/webapps/RegistroJornada/logs/RegistroJornadadb-%d{yyyy}-%i.log.gz">
            <PatternLayout
                pattern="%n%d{yyyy-MM-dd HH:mm:ss.SSS} %-5level %-30l %logger{36} ### %msg"
                header="-- REGISTRO JORNADA DATABASE LOG --" />
            <Policies>
                <TimeBasedTriggeringPolicy />
                <SizeBasedTriggeringPolicy size="10 MB" />
            </Policies>
            <DefaultRolloverStrategy max="20"/>
        </RollingFile>	
    </Appenders>
    <Loggers>
        <!-- LOG -->
        <Logger name="log" additivity="FALSE" level="DEBUG">
            <AppenderRef ref="LogFile" level="DEBUG" />
        </Logger>

        <!-- LOG DATABASE-->
        <Logger name="logdb" additivity="FALSE" level="DEBUG">
            <AppenderRef ref="LogFileDB" level="DEBUG" />
        </Logger>
    </Loggers>
</Configuration>